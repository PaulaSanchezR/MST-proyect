<h2>Signup</h2>

<form action="/{{findUser._id}}/update" method="POST" id="form-container">
  <label for="">Username: {{findUser.username}}</label>
  <br><br>
  <label for="">Privalages</label>
  <select name="privilage">
    <option value="{{findUser.privilage}}">{{findUser.privilage}}</option>
    <option value="repre" >repre</option>
    <option value="admin" >admin</option>
  </select>
  <br>
  <label for= "">Activate</label>
  <select name="active">
    
    <option value="{{findUser.active}}">{{findUser.active}}</option>
    <option value ="false">false</option>
  
    <option value="true" >true</option>
   
  </select>

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>

  <button>Edit account</button>
</form>